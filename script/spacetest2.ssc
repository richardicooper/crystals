%SCRIPT SPACETEST
%  VARIABLE INTEGER SERR NWRONG
^^WI WINDOW SPACETEST 'Systematic Absence Test'
^^WI MODAL COMMIT='BOK' CANCEL='BXX'
^^WI GRID GRIDM NROWS=7 NCOLS=3
^^WI {
^^WI   @ 2,2 GRID GRIDT NROWS=5 NCOLS=1
