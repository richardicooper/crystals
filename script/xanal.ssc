^^WI              @ 1,1 PLOTWINDOW _VFO NROWS=20 NCOLS=48                       
^^WI              @ 2,1 GRID RB NROWS=1 NCOLS=2
^^WI              {
^^WI                 @ 1,1 STRETCH VB HORIZONTAL
^^WI                 @ 1,2 BUTTON SAVEVFO 'Save Image'
^^WI              }                                                               
^^WI            }                                                               
