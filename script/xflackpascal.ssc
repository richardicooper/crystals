%%
^^??  IPUNCHA STATE
%     VERIFY ON OFF
%     GET SILENT NOSTORE FINAL ABBREVIATED ' '
%     IF VALUE .EQ. 1 THEN
%       EVALUATE IPUNCH = 0
%       EVALUATE CPUNCH = 'NO'
%     END IF
^^??  IPUNCHB STATE
%     VERIFY ON OFF
%     GET SILENT NOSTORE FINAL ABBREVIATED ' '
%     IF VALUE .EQ. 1 THEN
%       EVALUATE IPUNCH = 1
%       EVALUATE CPUNCH = 'TABLE'
%     END IF
^^??  IPUNCHC STATE
