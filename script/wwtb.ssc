%            EVALUATE QL1 = CVALUE
%            EVALUATE QL2 = CVALUE
%            EVALUATE QL3 = CVALUE
%            EVALUATE QL4 = CVALUE
%            TRANSFER '{E ERROR: Question must not exceed 4 lines' TO DISPLAY
%          END CASE
%%          TRANSFER 'Q: ' // CVALUE TO DISPLAY
%        END IF
%      END LOOP
%%
%% Get picture name if present
%%
%      EVALUATE LBM = FALSE
%      IF ( CVALUE STARTSWITH '!PICTURE' ) THEN
%        EXTRACT NEXT
%        EXTRACT TRANSFER INPUT
%        GET SILENT NOSTORE TEXT ' ' ' '
%        EVALUATE CBM = CVALUE
%        EVALUATE LBM = TRUE
%%        TRANSFER 'PIC: ' // CVALUE TO DISPLAY
%        EXTRACT NEXT
%      END IF
%%
%% Get the answers
%%
%      EVALUATE A1 = ' '
%      EVALUATE A2 = ' '
%      EVALUATE A3 = ' '
%      EVALUATE A4 = ' '
%      LOOP 5 TIMES
%        ON ERROR TERMINATE
%        EXTRACT NEXT
%        EXTRACT TRANSFER INPUT
%        GET SILENT NOSTORE TEXT ' ' ' '
