%            TRANSFER '{E ERROR: Must be 4 answers' TO DISPLAY
%          END IF
%        ELSE
%          CASE LOOPCOUNTER
%            EVALUATE A1 = CVALUE
%            EVALUATE A2 = CVALUE
%            EVALUATE A3 = CVALUE
%            EVALUATE A4 = CVALUE
%            TRANSFER '{E ERROR: Must be only 4 answers' TO DISPLAY
%          END CASE
%%          TRANSFER 'ANS: ' // CVALUE TO DISPLAY
%        END IF
%      END LOOP
%     END BLOCK
%%
%% Ask the question
