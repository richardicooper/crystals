%         VERIFY ON OFF                                                         
%         GET SILENT NOSTORE FINAL ABBREVIATED ' '                              
%         IF ( VALUE .EQ. 1 ) THEN                                              
%           EVALUATE CARG = 'S5'                                           
%           EVALUATE CLASS = 'SHEL'
%         END IF                                                                
%%
^^??      CD STATE                                                              
%         VERIFY ON OFF                                                         
%         GET SILENT NOSTORE FINAL ABBREVIATED ' '                              
%         IF ( VALUE .EQ. 1 ) THEN                                              
%           EVALUATE CARG = 'CD'                                           
%           EVALUATE CLASS = 'CRYS'
%         END IF                                                                
%%
^^??      CC STATE                                                              
%         VERIFY ON OFF                                                         
%         GET SILENT NOSTORE FINAL ABBREVIATED ' '                              
%         IF ( VALUE .EQ. 1 ) THEN                                              
%           EVALUATE CARG = 'CC'                                           
%           EVALUATE CLASS = 'CRYS'
%         END IF                                                                
