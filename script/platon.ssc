%SCRIPT PLATON                                                                  
%  VARIABLE CHARACTER CDIR CFILE                                                
%  VARIABLE LOGICAL T                                                           
%%                                                                              
%  IF FILEEXISTS ( 'publish.cif' ) .EQ. FALSE THEN                              
                                                                                
{E            No CIF file present.                                              
{I First run "Results"->"Output CIF file"                                       
                                                                                
%     FINISH                                                                    
%  END IF                                                                       
%%                                                                              
%%                                                                              
%  COPY '#RELEASE PUNCH bfile.pch'                                              
