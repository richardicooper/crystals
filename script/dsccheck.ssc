%  LOOP
%     ON EDITERROR TERMINATE
%     COPY 'TRANSFER FROM OFFSET=3 TO UISOF'
%     IF ( UISOF .GT. 0.001 ) .AND. ( UISOF .LT. 0.98 ) THEN
%         EVALUATE OLDDSC = TRUE
%     END IF
%     COPY 'NEXT'
%  END LOOP
%  COPY 'END'
%%
%%  LOOK FOR SHORT ATOM RECORDS
%  COPY '#GENERALEDIT 5'
%  CLEAR
%  COPY 'TRANSHEAD FROM OFFSET = 2 TO MD '
%     IF ( MD .NE. 18 ) THEN
%         EVALUATE OLDDSC = TRUE
