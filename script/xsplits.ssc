%SCRIPT XSPLIT
%  VARIABLE CHARACTER CATM 
%%
% COPY '#EDIT'
% LOOP
%   ON END TERMINATE
%   GET NOSTORE KEYWORD 'Atom?' ' '
%   EVALUATE CATM = CVALUE
%%
%%
%% Split the atom
%%
%   TRANSFER 'SPLIT 10 ' // CHARACTER CATM TO CRYSTALS
%   TRANSFER 'DELETE ' // CHARACTER CATM TO CRYSTALS
% END LOOP
% COPY 'END'
%END SCRIPT
