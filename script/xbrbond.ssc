%SCRIPT XBRBOND
%  VARIABLE CHARACTER ATOM1 ATOM2
%  GET NOSTORE SILENT KEYWORD 'Atom1?' ' '
%  EVALUATE ATOM1 = CVALUE
%  GET NOSTORE SILENT KEYWORD 'Atom2?' ' '
%  EVALUATE ATOM2 = CVALUE
%  COPY '#SCRIPT ZRM40'
%  CLEAR
%  COPY '#BONDING EXTEND'
%  INSERT 'BREAK '
%  STORE CHARACTER ( ATOM1 )
%  INSERT ' TO '
%  STORE CHARACTER ( ATOM2 )
%  SEND
%  COPY 'END'
%END SCRIPT
