%COPY 'END'
%COPY '#CAM'
%COPY 'END'
%COPY ' '
%COPY 'BALL ALL PLANE ALL VIEW'
%COPY ' '
% LOOP
% ON END TERMINATE
^^WI SET _CAMTEXT NOECHO
^^CR
