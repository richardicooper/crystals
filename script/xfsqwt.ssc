%          COPY 'END'                                                           
%          COPY '#ANALYSE'                                                      
%          COPY 'LIST LEVEL=HIGH'                                               
%          COPY 'PLOTFO DELTA OFF WDELSQ'                                       
{I   Agreement analysis:                                                        
%          COPY 'END'                                                           
%%                                                                              
%    COPY '#GENERALEDIT 30'                                                     
%    COPY 'LOCATE RECORDTYPE = 103'                                             
%    COPY 'TRANSFER FROM OFFSET = 9 TO NREF'                                 
%    COPY 'END'                                                                 
%    EVALUATE OUTL4 = L4:NREF
