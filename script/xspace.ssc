^^WI     'P 21 3' 'I 21 3' 'P m -3' 'P n -3' 'F m -3' 
^^WI     'F d -3' 'I m -3' 'P a -3' 'I a -3' 'P 4 3 2' 
^^WI     'P 42 3 2' 'F 4 3 2' 'F 41 3 2' 'I 4 3 2' 'P 43 3 2' 'P 41 3 2' 
^^WI     'I 41 3 2' 'P -4 3 m' 'I -4 3 m' 'P -4 3 n' 'F -4 3 c' 
^^WI     'I -4 3 d' 'P m -3 m' 'P n -3 n' 'P m -3 n'  
