%%
%% Divide shelx occ by SPARE to give chemical occupancy.
%%
%              IF ( SPECOCC .LE. 0.0 ) THEN
%                EVALUATE SPECOCC = 1.0
%              END IF
%              if sxocc .le. 0. then
%                  evaluate cryocc = 1.
%              else
%                  EVALUATE CRYOCC = SXOCC / SPECOCC
%              end if
%              COPY 'TRANSFER TO OFFSET=2 FROM CRYOCC'
