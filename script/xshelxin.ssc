%              COPY 'END'
%              CLEAR
%              EVALUATE SPACETEXT = FALSE
%              EVALUATE SPACEREAD = ' '
%              LOOP
%                GET NOSTORE NOPROMPT KEYWORD ' ' '_NOMORE_'
