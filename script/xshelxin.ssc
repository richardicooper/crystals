                  CVALUE STARTSWITH '7' .OR. CVALUE STARTSWITH '8' .OR. -
                  CVALUE STARTSWITH '9' THEN
%% This is an old-fashioned card with actual sfac details on. Carry on looping.
%                 EVALUATE LEND = LEND + 1
