%    OUTPUT
%  END IF
%  IF ( DOFLACK .EQ. TRUE ) THEN
%    CLEAR
%    INSERT '{R   Flack parameter is: '
%    STORE FORMAT /(F15.5)/ LENGTH 15 REAL FLACKP
%    OUTPUT
%  END IF
%  IF ( DOTWIN .EQ. TRUE ) THEN
%    CLEAR
%    INSERT '{R   There are twin element parameters '
%    OUTPUT
%  END IF
