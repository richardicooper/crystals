%%                                                                              
% IF  EXISTS ( 30 ) .NE. 1 THEN                                                 
%   COPY '#LIST 30'                                                             
%   COPY 'END'                                                                  
% END IF                                                                        
% COPY '#GENERALEDIT 30'                                                        
% COPY 'LOCATE RECORDTYPE = 102'                                                
% COPY 'TRANSFER FROM OFFSET = 0 TO MIN'                                        
% COPY 'TRANSFER FROM OFFSET = 1 TO MED'                                        
% COPY 'TRANSFER FROM OFFSET = 2 TO MAX'                                        
% COPY 'TRANSFER FROM OFFSET = 6 TO TEMP'                                       
