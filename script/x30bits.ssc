%    VERIFY CRYSTAL BXX BHELP BOK           
%    GET SILENT NOSTORE FINAL ABBREVIATED ' ' ' '                             
%    EVALUATE SWITCH = VALUE                                                  
%    CASE SWITCH                                                                
%%
%      BLOCK %CRYSTAL%                                                          
%        VERIFY MIN MED MAX TEMP COLOUR SHAPE -                      
                CELLZ PRESS                                   
%        GET SILENT NOSTORE FINAL ABBREVIATED ' ' ' '                           
%        CASE VALUE                                                             
%          EVALUATE FMIN    = TRUE                                              
%          EVALUATE FMED    = TRUE                                              
%          EVALUATE FMAX    = TRUE                                              
%          EVALUATE FTEMP   = TRUE                                              
%          EVALUATE FCOLOUR = TRUE                                              
%          EVALUATE FSHAPE  = TRUE                                              
%          EVALUATE FCELLZ  = TRUE                                              
%          EVALUATE FPRESS  = TRUE                                              
%        END CASE                                                               
%        GET NOSTORE SILENT TEXT ' ' ' '                                        
%      END BLOCK                                                                
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%      BLOCK %BXX%                                                              
                                                                                
 * List 30 has not been changed.                                                
                                                                                
^^CO         DISPOSE NEW30                                                       
%            EVALUATE LOOPEND = LOOPCOUNTER                                     
%      END BLOCK                                                                
%      BLOCK %BHELP%                                                            
%            COPY '#SCRIPT XHELP1'                                              
 Dimensions Min Med Max (mm)                                                    
    The crystal dimensions, in mm.                                              
 Temperature                                                                    
    Data collection temperature, Kelvin.                                        
 Colour                                                                         
    The crystal colour.                                                         
 Shape                                                                          
    The crystal shape.                                                          
 Z                                                                              
    Number of molecular entities in the unit cell.                              
%            COPY '#SCRIPT XHELP2'                                              
%      END BLOCK                                                                
