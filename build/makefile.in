ifeq ($(COMPCODE),MAC)

    GUIFLAGS = -fno-inline -Wl,-headerpad_max_install_names
    GUILIBRARIES = -framework OpenGL -lg2c `wx-config --libs --gl-libs` 
    CLFLAGS =  
    CLLIBRARIES = -lg2c
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 
    CPPFLAGS = -s -fexceptions -I /usr/local/include -I/Developer/Headers/FlatCarbon -I/usr/X11R6/include `wx-config --cppflags`
    CFLAGS = -s -I /usr/local/include -I/Developer/Headers/FlatCarbon -I/usr/X11R6/include

    CXX = g++
    CC = gcc
    LD = g++
    F77 = gfortran
    F77FLAGS = -std=legacy -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D _$(COMPCODE)_
    OPT = -O2

    INSTALL=/usr/bin/install

else
 ifeq ($(COMPCODE),GIL)
    GUIFLAGS = -fno-inline -fexceptions
    GUILIBRARIES = `wx-config --libs --gl-libs` 
    CLFLAGS = 
    CLLIBRARIES = 
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 

    CPPFLAGS = -s -fexceptions -I/usr/local/include `wx-config --cppflags` -D_GNUF77_
    CFLAGS = -s

    CXX = g++48
    CC = gcc48
    LD = gfortran48
    LD77 = gfortran48
    F77 = gfortran48
    F77FLAGS = -fno-realloc-lhs -fexceptions -std=legacy  -msse2 -ftree-vectorize -fno-sign-zero -I../crystals/ -D _$(COMPCODE)_ -D _HOL_ -D _GNUF77_ 
    F90FLAGS = -fno-realloc-lhs -fcheck=all -fexceptions -pedantic -msse2 -fno-sign-zero -ftree-vectorize  -I../crystals/ -D _$(COMPCODE)_ 
    LDFLAGS =  /u/ric/pparois/Documents/OpenBLAS/libopenblas_core2p-r0.2.8.a -fopenmp
    OPT =  -gdwarf-3 -O3 -fopenmp -ffpe-trap=invalid,zero,overflow

    INSTALL=/usr/bin/install

 else
  ifeq ($(COMPCODE),WXS)

    SUFFIX =.exe

    GUIFLAGS = -fno-inline -fexceptions -mwindows
    GUILIBRARIES = -lg2c `wx-config --libs --gl-libs` 
    CLFLAGS = 
    CLLIBRARIES = -lg2c
    NATIVEXLIBS = -lgdi32

    CPPFLAGS = -s -fexceptions -I /usr/local/include `wx-config --cppflags` 
    CFLAGS = -s -I /usr/local/include 

    CXX = g++
    CC = gcc
    LD = g++
    F77 = g77
    F77FLAGS = -fexceptions -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D _$(COMPCODE)_ -D_HOL_ -D_GNUF77_
    OPT = -O2

    INSTALL=/bin/install

  else
   ifeq ($(COMPCODE),LIN)
    GUIFLAGS = -fno-inline -fexceptions -pthread 
    GUILIBRARIES =
    CLFLAGS =
    CLLIBRARIES = 
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 

    CPPFLAGS = -s -fexceptions
    CFLAGS = -s

    CXX = g++48
    CC =  gcc48
    LD =  gfortran48
    LD77 = gfortran48
    F77 =  gfortran48
    F77FLAGS = -fbounds-check -fexceptions  -std=legacy -ftree-vectorize -fno-sign-zero -I../crystals/ -D _$(COMPCODE)_ -D _HOL_ -D _GNUF77_
    F90FLAGS = -fbounds-check -fexceptions -pedantic -fno-sign-zero -ftree-vectorize  -I../crystals/ -D _$(COMPCODE)_
    LDFLAGS = /u/ric/pparois/Documents/OpenBLAS/libopenblas_core2p-r0.2.8.a -fopenmp
    OPT =  -gdwarf-3 -O3 -fopenmp -ffpe-trap=invalid,zero,overflow

    INSTALL=/bin/install

   else

    $(error COMPCODE not specified. Try 'export COMPCODE=WXS' or 'set COMPCODE=GID')

   endif
  endif
 endif
endif

obj/%.o : %.f90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<

obj/%.o: %.cpp
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o: %.cc
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o : %.c
	$(CC) -c $(CFLAGS) -D_$(COMPCODE)_ $(OPT) -o $@ $<

obj/%.d: %.cc
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

obj/%.d: %.cpp
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

%.o : %.fpp
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<
