obj/%.o : %.f90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<

obj/%.o: %.cpp
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o: %.cc
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o : %.c
	$(CC) -c $(CFLAGS) -D_$(COMPCODE)_ $(OPT) -o $@ $<

obj/%.d: %.cc
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

obj/%.d: %.cpp
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

%.o : %.fpp
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<
