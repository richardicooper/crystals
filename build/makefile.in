ifeq ($(COMPCODE),MAC)

    GUIFLAGS = -fno-inline -Wl,-headerpad_max_install_names
    GUILIBRARIES = -framework OpenGL -lg2c `wx-config --libs --gl-libs` 
    CLFLAGS =  
    CLLIBRARIES = -lg2c
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 
    CPPFLAGS = -s -fexceptions -I /usr/local/include -I/Developer/Headers/FlatCarbon -I/usr/X11R6/include `wx-config --cppflags`
    CFLAGS = -s -I /usr/local/include -I/Developer/Headers/FlatCarbon -I/usr/X11R6/include

    CXX = g++
    CC = gcc
    LD = g++
    F77 = gfortran
    F77FLAGS = -std=legacy -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D _$(COMPCODE)_
    OPT = -O2

    INSTALL=/usr/bin/install

else
 ifeq ($(COMPCODE),GIL)
    GUIFLAGS = -fno-inline -fexceptions -D__BOTHWX__
    GUILIBRARIES = `wx-config --libs std,stc --gl-libs` 
    CLFLAGS = 
    CLLIBRARIES = 
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 

    CPPFLAGS = -s -fexceptions -I/usr/local/include `wx-config --cppflags` -D_GNUF77_ -D__BOTHWX__ -D__WXGTK__
    CFLAGS = -s -D__BOTHWX__ -D__WXGTK__

    CXX = g++51
    CC = gcc51
    LD = gfortran51
    LD77 = gfortran51
    F77 = gfortran51
    F77FLAGS = -std=legacy -ftree-vectorize -msse2 -fno-sign-zero -I../crystals/ -D _$(COMPCODE)_ -D _HOL_ -D _GNUF77_ -D__BOTHWX__
    F90FLAGS = -fno-sign-zero -ftree-vectorize -msse2 -I../crystals/  -D _$(COMPCODE)_ -D _HOL_ -D _GNUF77_ -D__BOTHWX__
    LDFLAGS = -lGL -lstdc++ -ldl -lGLU -lopenblaso 
    OPT = -g -O2 -fopenmp -Wfatal-errors 

    INSTALL=/usr/bin/install

 else
  ifeq ($(COMPCODE),WXS)

    SUFFIX =.exe

    GUIFLAGS = -fno-inline -fexceptions -mwindows
    GUILIBRARIES = -lg2c `wx-config --libs --gl-libs` 
    CLFLAGS = 
    CLLIBRARIES = -lg2c
    NATIVEXLIBS = -lgdi32

    CPPFLAGS = -s -fexceptions -I /usr/local/include `wx-config --cppflags` 
    CFLAGS = -s -I /usr/local/include 

    CXX = g++
    CC = gcc
    LD = g++
    F77 = g77
    F77FLAGS = -fexceptions -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D _$(COMPCODE)_ -D_HOL_ -D_GNUF77_
    OPT = -O2

    INSTALL=/bin/install

  else
   ifeq ($(COMPCODE),LIN)
    GUIFLAGS = -fno-inline -fexceptions -pthread 
    GUILIBRARIES =
    CLFLAGS =
    CLLIBRARIES = 
    NATIVEXLIBS = -lX11 -L/usr/X11R6/lib 

    CPPFLAGS = -s -fexceptions
    CFLAGS = -s

    CXX = g++48
    CC = gcc48
    LD = gfortran48
    F77 = gfortran48
    F77FLAGS = -std=legacy -ftree-vectorize -fno-automatic  -I../crystals/ -D _$(COMPCODE)_ -D _HOL_ -D _GNUF77_  -fno-sign-zero
    F90FLAGS =   -I../crystals/  -fno-sign-zero
    LDFLAGS = /u/ric/pparois/Documents/OpenBLAS/libopenblas_core2p-r0.2.8.a -static-libgfortran -static-libgcc 
    OPT = -g -O2 -fopenmp -msse2 -ffast-math -ftree-vectorize 


    INSTALL=/bin/install

   else

    $(error COMPCODE not specified. Try 'export COMPCODE=WXS' or 'set COMPCODE=GID')

   endif
  endif
 endif
endif

obj/%.o : %.f90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F90
	$(F77) -c $(F90FLAGS) $(OPT) -o $@ $<

obj/%.o : %.F
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<

obj/%.o: %.cpp
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o: %.cc
	$(CXX) -c $(CPPFLAGS) $(OPT) -o $@ $<

obj/%.o : %.c
	$(CC) -c $(CFLAGS) -D_$(COMPCODE)_ $(OPT) -o $@ $<

obj/%.d: %.cc
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

obj/%.d: %.cpp
	-mkdir obj
	$(SHELL) -ec '$(CXX) -M $(CPPFLAGS) $(OPT) $< \
	| sed "s/$*\.o/& obj\/$*.d/g" ' > $@

%.o : %.fpp
	$(F77) -c $(F77FLAGS) $(OPT) -o $@ $<
