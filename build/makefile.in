    LDFLAGS = /c/Users/Pascal/Downloads/hdf5-1.8.15-patch1/hdf5/lib/libhdf5_fortran.dll.a /c/Users/Pascal/Downloads/hdf5-1.8.15-patch1/hdf5/lib/libhdf5.dll.a -L/files/pparois/root/lib -lGL -lstdc++ -ldl -lGLU -lopenblaso -lhdf5_fortran -lhdf5
