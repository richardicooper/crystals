    LDFLAGS = -lGL -lstdc++ -ldl -lGLU -lopenblaso -lhdf5_fortran -lhdf5
    OPT = -g -gdwarf-3 -O2 -fopenmp -Wfatal-errors 

    INSTALL=/usr/bin/install

 else
  ifeq ($(COMPCODE),WXS)

