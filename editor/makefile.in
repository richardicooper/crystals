ifeq ($(COMPCODE),MAC)

    CFLAGS = -s -O3 -fexceptions -I /usr/local/include -I/Developer/Headers/FlatCarbon -I/usr/X11R6/include `wx-config --cppflags`
    FLAGS = -fno-inline `wx-config --libs --gl-libs` -O2
    LIBRARIES = -framework OpenGL -lg2c
    CXX = g++
    LD = g++
    F77FLAGS = -O2 -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D $(COMPCODE)

else
 ifeq ($(COMPCODE),GIL)
    CFLAGS = -s -O3 -fexceptions -I /usr/local/include `wx-config --cppflags`
    FLAGS = -fno-inline -fexceptions `wx-config --libs --gl-libs` -O2
    LIBRARIES = -lg2c
    CXX = g++
    LD = g++
    F77FLAGS = -O2 -fexceptions -fno-automatic -fno-globals -Wno-globals -I../crystals/ -D $(COMPCODE)
 else

    $(error COMPCODE not specified)

 endif
endif


%.o : %.fpp
	$(F77) -c $(F77FLAGS) $(DEBUG) -o $@ $<

%.o: %.cc
	$(CXX) -c $(CFLAGS) $(DEBUG) -o $@ $<

%.d: %.cc
	$(SHELL) -ec '$(CXX) -M $(CFLAGS) $(DEBUG) $< \
	| sed "s/$*\.o/& $@/g" ' > $@

