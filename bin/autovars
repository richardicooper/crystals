export CVSROOT=:pserver:crystalsanon@darkstar.chem.ox.ac.uk:/crystals
export CRYSBUILD=${CRYSSRC}/../${COMPCODE}build
export CRYSDIR=${CRYSBUILD}/
export PATH=${CRYSSRC}/bin:/usr/bin/X11:$PATH
export WXLIBPATH=/usr/local/lib

# If linking against the debug wx libs, comment the next line.
#export WXDEBUG=

# If linking against the debug wx libs, uncomment the next line.
export WXDEBUG="-D__WXDEBUG__ -D_DEBUG"

export WXLIB=wx_gtk-2.4
export WXLIBGL=wx_gtk_gl-2.4

# and change the WXLIBD and WXLIBGLD lib names here to the debug versions:
export WXLIBD=wx_gtkd-2.4
export WXLIBGLD=wx_gtkd_gl-2.4

export WXINC=$WXLIBPATH/wx/include/gtk-2.4
export WXINCD=$WXLIBPATH/wx/include/gtkd-2.4

export LD_LIBRARY_PATH=$WXLIBPATH
