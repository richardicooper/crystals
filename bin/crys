
if [ -f $CRYSSRC/scriptsrc/$1.ssc ]; then
echo building $1.scp
crysedit $SRCDIR/$1.ssc $1.scp code=$EDCODE macro=$CRYSSRC/cryssrc/macrofil.mac incl=+ excl=- comm=\%\% > $CRYSBUILD/errors/scp$1.lis ||buildfile CRYSEDIT_ERROR_SCP $1 $CRYSBUILD/errors/scp$1.lis
fi

if [ -f $CRYSSRC/scriptsrc/$1.sda ]; then
echo building $1.dat
crysedit $SRCDIR/$1.sda $1.dat code=$EDCODE macro=$CRYSSRC/cryssrc/macrofil.mac incl=+ excl=- comm=#  > $CRYSBUILD/errors/dat$1.lis || builderr CRYSEDIT_ERROR_CRYS $1 $CRYSBUILD/errors/dat$1.lis
fi


